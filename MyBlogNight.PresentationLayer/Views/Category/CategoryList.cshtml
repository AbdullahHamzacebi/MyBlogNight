@model List<MyBlogNight.EntityLayer.Concrete.Category>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Bloglar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <th>@item.CategoryName</th>
                <th><a href="#" class="btn btn-danger">Sil</a></th>
                <th><a href="#" class="btn btn-success">Güncelle</a></th>
                <th><a href="#" class="btn btn-warning">Bloglar</a></th>
                
            </tr>
        }
    </table>
    <a href="#" class="btn btn-primary">Yeni Kategori Girişi</a>
</div>